{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/transform", "dest": "app.py", "methods": ["POST"] },
    { "src": "/", "dest": "index.html", "methods": ["GET"] },
    { "src": "/static/(.*)", "dest": "static/$1" }
  ]
}
